{% extends 'book-single.html.twig' %}

{% block title %}Edit Evaluation{% endblock %}

{% block evalutions %}
    <h1>Edit Evaluation</h1>

    {{ include('evaluation/_form.html.twig', {'button_label': 'Update'}) }}

    {{ include('evaluation/_delete_form.html.twig') }}
{% endblock %}
{% block avis %}
    {% for avi in avis %}
        {% if avi.idUser.idUser==8 %}
            <div class="media">
                <img class="media-object pull-left" src="{{ asset('images/author.jpg') }}" alt="...">
                <div class="media-body">
                    <h6 class="media-heading">{{ avi.idUser.username}} <a>{{ include('avis/_delete_form.html.twig') }}</a> </h6>
                    <p>{{ avi.commentaire }}</p>
                </div>	<!-- End of /.meida-body -->
            </div>
        {% else %}
            <div class="media">
                <img class="media-object pull-left" src="{{ asset('images/author.jpg') }}" alt="...">
                <div>
                    <div class="media-body">
                        <h6 class="media-heading">{{ avi.idUser.username}} </h6>
                        <p>{{ avi.commentaire }}</p>
                    </div>	<!-- End of /.meida-body -->
                </div>
            </div>
        {% endif%}
    {% endfor %}
{% endblock %}

{% block comnt %}

    {{ form_start(form) }}


    {{ form_widget(form) }}



    <button class="btn">{{ button_label|default('Save') }}</button>

    {{ form_end(form) }}

{% endblock %}